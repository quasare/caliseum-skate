---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../features/hero/Hero';
import content from '../content/shop.json';
---

<BaseLayout
  title="Shop - Coliseum Skate"
  description="Shop for books, apparel, prints, and more from Coliseum Skate"
  currentPath="/shop"
>
  <Hero {...content.hero} />

  {/* Coming Soon Notice */}
  <section class="py-6 px-4 sm:px-6 bg-primary/10 border-b-2 border-primary">
    <div class="max-w-7xl mx-auto text-center">
      <p class="text-lg font-semibold text-dark">{content.notice}</p>
    </div>
  </section>

  {/* Categories */}
  <section class="py-8 px-4 sm:px-6 bg-light">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-wrap gap-3 justify-center">
        {content.categories.map((category) => (
          <button class="px-4 py-2 rounded-lg bg-white border-2 border-gray-300 text-dark font-medium hover:border-primary hover:text-primary transition-colors">
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  {/* Products Grid */}
  <section class="py-16 sm:py-20 lg:py-24 px-4 sm:px-6">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {content.products.map((product) => (
          <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden">
            <div class="relative">
              <img
                src={product.image}
                alt={product.name}
                class="w-full h-64 object-cover"
              />
              <span class="absolute top-4 right-4 bg-white text-dark px-3 py-1 rounded-full text-sm font-semibold shadow-md">
                ${product.price.toFixed(2)}
              </span>
            </div>
            <div class="p-4">
              <span class="text-xs text-primary font-semibold uppercase tracking-wide">{product.category}</span>
              <h3 class="text-lg font-bold text-dark mt-1 mb-2">{product.name}</h3>
              <p class="text-sm text-gray-600 mb-4">{product.description}</p>
              <div class="flex justify-between items-center mb-3">
                <span class="text-xs text-gray-500">{product.availability}</span>
              </div>
              <a
                href={`/contact?product=${product.id}`}
                class="block w-full text-center bg-dark text-light px-4 py-2 rounded-lg font-semibold hover:bg-secondary transition-colors"
              >
                Contact to Purchase
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
