---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../features/hero/Hero';
import Contact from '../features/contact/Contact';
import content from '../content/home.json';
---

<BaseLayout
  title="Coliseum Skate - Home"
  description="Documenting skateboarding culture through film, photography, and storytelling"
  currentPath="/"
>
  <Hero {...content.hero} />

  <section className="py-16 sm:py-20 lg:py-24 px-4 sm:px-6 bg-light">
    <div className="max-w-7xl mx-auto">
      <div className="text-center mb-12">
        <h2 className="text-3xl sm:text-4xl font-bold text-dark mb-4">{content.featured.title}</h2>
        <p className="text-lg text-gray-600">{content.featured.subtitle}</p>
      </div>
    </div>
  </section>

  <Contact client:only="react" />
</BaseLayout>

